<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danxx.ActivityCrop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="原图 :"
            android:textSize="30pt"
            android:textColor="@android:color/holo_red_light"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/gaoyuanyuan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="CropTop :"
            android:textSize="30pt"
            android:textColor="@android:color/holo_red_light"/>
        <com.danxx.demoview.CropImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bitmapCropType="top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="CropLeft :"
            android:textSize="30pt"
            android:textColor="@android:color/holo_red_light"/>
        <com.danxx.demoview.CropImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bitmapCropType="left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="CropRight :"
            android:textSize="30pt"
            android:textColor="@android:color/holo_red_light"/>
        <com.danxx.demoview.CropImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bitmapCropType="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="CropBottom :"
            android:textSize="30pt"
            android:textColor="@android:color/holo_red_light"/>
        <com.danxx.demoview.CropImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bitmapCropType="bottom"
            android:layout_marginBottom="30pt"/>
    </LinearLayout>

</ScrollView>
